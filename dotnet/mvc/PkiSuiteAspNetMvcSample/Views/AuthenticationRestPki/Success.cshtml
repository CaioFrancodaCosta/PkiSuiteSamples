@using PkiSuiteAspNetMvcSample.Models.RestPki
@model AuthenticationSuccessModel

<h2>Certificate Authentication</h2>

<p>
	User certificate information:
	<ul>
		<li>Subject: @Model.UserCert.SubjectName.CommonName</li>
		<li>Email: @Model.UserCert.EmailAddress</li>
		<li>
			ICP-Brasil fields
			<ul>
				<li>Tipo de certificado: @Model.UserCert.PkiBrazil.CertificateType</li>
				<li>CPF: @Model.UserCert.PkiBrazil.CpfFormatted</li>
				<li>Responsavel: @Model.UserCert.PkiBrazil.Responsavel</li>
				<li>Empresa: @Model.UserCert.PkiBrazil.CompanyName</li>
				<li>CNPJ: @Model.UserCert.PkiBrazil.CnpjFormatted</li>
				<li>RG: @Model.UserCert.PkiBrazil.RGNumero @Model.UserCert.PkiBrazil.RGEmissor @Model.UserCert.PkiBrazil.RGEmissorUF</li>
				<li>OAB: @Model.UserCert.PkiBrazil.OabNumero @Model.UserCert.PkiBrazil.OabUF</li>
			</ul>
		</li>
	</ul>
</p>
